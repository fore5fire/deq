{
  "name": "curatrix-tests",
  "version": "1.0.0",
  "main": "dist/tests.js",
  "repository": "https://gitlab.com/katcheCode/webpack-server-boilerplate.git",
  "author": "Landon Smith <ls@katchecode.com>",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=7.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.34",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.34",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.34",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0-beta.34",
    "@babel/preset-env": "^7.0.0-beta.34",
    "babel-eslint": "^8.1.0",
    "babel-loader": "8.0.0-beta.0",
    "babel-register": "7.0.0-beta.3",
    "eslint": "^4.18.0",
    "ncp": "^2.0.0",
    "raw-loader": "^0.5.1",
    "webpack": "^3.9.1",
    "webpack-node-externals": "^1.6.0"
  },
  "dependencies": {
    "apollo-server-koa": "^1.3.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-exclude": "^1.0.5",
    "fs-extra": "^4.0.2",
    "graphql": "^0.11.7",
    "jsonwebtoken": "^8.1.1",
    "mocha": "^3.5.3",
    "moment": "^2.19.4",
    "mongodb": "^3.0.2",
    "node-fetch": "^2.0.0",
    "pino": "^4.11.0",
    "portfinder": "^1.0.13",
    "source-map-support": "^0.4.18",
    "uuid": "^3.1.0",
    "zxcvbn": "^4.4.2"
  },
  "scripts": {
    "start": "yarn build && yarn test",
    "setup": "helm init --upgrade && yarn build && yarn update && yarn deploy",
    "restart": "kubectl delete pod -l service=curatrix",
    "update": "cd ../deploy/curatrix-integration-tests && helm dep update",
    "deploy": "ncp ../deploy/curatrix ../deploy/curatrix-integration-tests/charts/curatrix && helm upgrade curatrix-integration-tests ../deploy/curatrix-integration-tests -i",
    "build": "docker build -t curatrix-tests:local -f build/Dockerfile-amd64 . && cd ../server && yarn build",
    "test": "kubectl delete pod -l service=curatrix-tests && helm test curatrix-integration-tests || yarn logs",
    "logs": "kubectl logs -l app=curatrix",
    "lint": "eslint src",
    "uninstall": "helm delete curatrix-integration-tests --purge"
  }
}
